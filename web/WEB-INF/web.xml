<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <resource-ref>
        <res-ref-name>jdbc/FinalTaskDatabase</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <!--DataSource предназначен для работы с ConnectionPool -->
        <res-auth>Container</res-auth>
    </resource-ref>
    
    <welcome-file-list>
        <welcome-file>loginPage.jsp</welcome-file>
    </welcome-file-list>
</web-app>
        <!--с поиощью эелемента web-mapping  можно задать сопоставление сервдета с запрашиваемым URL -->
        <!--в корневой узел web-app помещают конфигурации -->
        <!-- ВСЕ ЧТО ХРАНИТСЯ В WEB-INF предназначено для сервера, не для пользователя, А ВСЕ ЧТО НАХОДИТСЯ ЗА ПРЕДЕЛАМИ ИМЕЮТ ДОСТУП ИЗВНЕ, ПО URL-->